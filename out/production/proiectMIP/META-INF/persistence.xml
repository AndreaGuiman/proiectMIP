<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="proiectdb" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>model.Authors</class>
        <class>model.Books</class>
        <class>model.BooksAuthors</class>
        <class>model.BooksPublishers</class>
        <class>model.Clients</class>
        <class>model.History</class>
        <class>model.Managers</class>
        <class>model.Publishers</class>
        <class>model.Reminders</class>
        <class>model.Requests</class>
        <class>model.Reviews</class>
        <class>model.Users</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/proiectdb?useSSL=false"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
        </properties>
    </persistence-unit>
</persistence>
